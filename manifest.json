{

  "manifest_version": 2,
  "name": "Focus Mode",
  "version": "0.5",

  "description": "Focus on what is important on the web.",

  "icons": {
    "48": "icons/FM-48.png",
    "96": "icons/FM-96.png",
    "32": "icons/FM-32.png"
  },

  "permissions": [
  	"<all_urls>",
    "activeTab", 
  	  	"tabs"],

  "background": {
  "scripts": ["Clean_Page.js"]
  },

  "browser_action": {
    "default_icon" : "icons/FM-32.png",
    "default_title": "Focus Mode",
    "default_popup": "popup/popup.html"
  },

  "options_ui": {
  "page": "options.html",
  "browser_style": true
  }
}